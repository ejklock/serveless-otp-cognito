{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "outDir": ".build",
    "moduleResolution": "Node",
    "lib": ["es2015"],
    
  "rootDir": "./src"
  }
}